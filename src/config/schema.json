{
    "env": {
        "doc": "The application environment.",
        "format": ["production", "development"],
        "default": "development",
        "env": "NODE_ENV"
    },
    "host": {
        "doc": "The IP address to bind.",
        "format": "ipaddress",
        "default": "172.0.0.1",
        "env": "HOST"
    },
    "port": {
        "doc": "The port of to bind.",
        "format": "port",
        "default": 8080,
        "env": "PORT"
    },
    "versions": [{
        "doc": "Documentation version. Last entry is not build to ",
        "format": ["v2.3", "v2.5", "v2.6","v2.7", "v2.8","v3.0","v3.0.1","master"],
        "default": "master"
    }],
    "documentation": {
        "doc": "Documentation source folder.",
        "format": "String",
        "default": "docs",
        "env": "DOCUMENTATION"
    },
    "destination": {
        "doc": "Build output folder.",
        "format": "String",
        "default": "docs/.vuepress/dist",
        "env": "DESTINATION"
    },
    "wd": {
        "doc": "Working directory.",
        "format": "String",
        "default": ""
    },
    "endpoint": {
        "doc": "Hosting endpoint.",
        "format": "String",
        "default": "",
        "env": "ENDPOINT"
    },
    "verbose": {
        "doc": "Verbose cli output.",
        "format": "Boolean",
        "default": false,
        "env": "VERBOSE"
    },
    "submodules": [{
        "name": {
            "doc": "Repository name.",
            "format": "String",
            "default": ""
        },
        "destination": {
            "doc": "Repository destination.",
            "format": "String",
            "default": ""
        },
        "reference": {
            "doc": "Reference repository (auto:foldername, remote, /path/to/repo)",
            "format": "String",
            "default": "remote"
        },
        "branch": {
            "doc": "Checkout repository branch|tag.",
            "format": "String",
            "default": "master"
        },
        "fatality": {
            "doc": "Abort setup when failed?",
            "format": "Boolean",
            "default": false
        }
    }],
    "html_to_md": [{
        "from": {
            "doc": "HTML source folder.",
            "format": "String",
            "default": ""
        },
        "to": {
            "doc": "Markdown output folder",
            "format": "String",
            "default": ""
        }
    }]
}