{
  "env": {
    "doc": "The application environment.",
    "format": ["production", "development"],
    "default": "development",
    "env": "NODE_ENV"
  },
  "host": {
    "doc": "The IP address to bind.",
    "format": "ipaddress",
    "default": "172.0.0.1",
    "env": "HOST"
  },
  "port": {
    "doc": "The port of to bind.",
    "format": "port",
    "default": 8080,
    "env": "PORT"
  },
  "version": {
    "doc": "Documentation version.",
    "format": ["2.3", "2.5", "2.6", "2.7", "2.8", "3.0", "3.0.1", "pre-3.1", "master"],
    "default": "master",
    "env": "VERSION"
  },
  "latest": {
    "doc": "Documentation version.",
    "format": ["2.3", "2.5", "2.6", "2.7", "2.8", "3.0", "3.0.1", "pre-3.1", "master"],
    "default": "master",
    "env": "LATEST"
  },
  "versions": [
    {
      "doc": "Documentation versions.",
      "format": ["2.3", "2.5", "2.6", "2.7", "2.8", "3.0", "3.0.1", "pre-3.1", "master"],
      "default": "master"
    }
  ],
  "documentation": {
    "doc": "Documentation source folder.",
    "format": "String",
    "default": "docs",
    "env": "DOCUMENTATION"
  },
  "destination": {
    "doc": "Build output folder.",
    "format": "String",
    "default": "dist",
    "env": "DESTINATION"
  },
  "endpoint": {
    "doc": "Hosting endpoint.",
    "format": "String",
    "default": "",
    "env": "ENDPOINT"
  },
  "verbose": {
    "doc": "Verbose cli output.",
    "format": "Boolean",
    "default": false,
    "env": "VERBOSE"
  },
  "submodules": [
    {
      "name": {
        "doc": "Repository name.",
        "format": "String",
        "default": ""
      },
      "location": {
        "doc": "Repository destination.",
        "format": "String",
        "default": ""
      },
      "reference": {
        "doc": "Reference repository (auto:foldername, remote, /path/to/repo)",
        "format": "String",
        "default": "remote"
      }
    }
  ],
  "repositories": [
    {
      "name": {
        "doc": "Repository name.",
        "format": "String",
        "default": ""
      },
      "location": {
        "doc": "Repository destination.",
        "format": "String",
        "default": ""
      }
    }
  ],
  "dependencies": [
    {
      "repository": {
        "doc": "Git repository name.",
        "format": "String",
        "default": ""
      },
      "source": {
        "doc": "Source folder.",
        "format": "String",
        "default": ""
      },
      "destination": {
        "doc": "Destination folder.",
        "format": "String",
        "default": ""
      },
      "filter": {
        "doc": "Filter content in source folder.",
        "format": "RegExp",
        "default": ""
      },
      "versions": [
        {
          "doc": "Version.",
          "format": "String",
          "default": ""
        },
        {
          "doc": "Branch of version.",
          "format": "String",
          "default": ""
        }
      ],
      "branch": {
        "doc": "Branch.",
        "format": "String",
        "default": "master"
      }
    }
  ]
}
